{
  "compilerOptions": {
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "outDir": "build/tsc-out",
    "sourceMap": true,
    "target": "ES2017",
    "lib": ["ES2017","es2019.array","dom", "dom.iterable"],
    "typeRoots": ["node_modules/@types", "node_modules/web-ext-types/"],
    "experimentalDecorators": true,
    "alwaysStrict": true,
      "baseUrl": "src/",
      "paths": {
          "@src/*": ["*"]
      }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
      "./src/**/*.test.ts"
  ]
}
